<p style="color: green"><%= notice %></p>


<div class="row">
  <div class="jumbotron col-12">
    <h1 class="display-4">AI Icons</h1> 
    <p class="lead">Ce site est une librairie gratuite d'icônes en 3D générées par Midjourney.</p>
      <% if user_signed_in? %> 
      <div> Welcome <%= current_user.email %></div> 
        <%= button_to "Sign out", destroy_user_session_path, method: :delete, class:"btn btn-primary  " %> 
        <% if current_user.try(:admin?) %>
          <a href="/admin/" class="btn btn-primary">Panel admin</a>
        <% end %>
        <%= link_to "My Profile", user_path %>
      <% else %>
        <%= button_to "Sign in", new_user_session_path, class:"btn btn-primary" %> 
      <% end %>
  </div>
</div>



  <%# Barre de recherche %>
  <div class="row">
    <div class="col-4">
      <form target="" method="">
        <div class="input-group mb-3">
          <input name="term" value="<%= @term %>" type="text" class="form-control" placeholder="Rechercher" aria-label="Rechercher" aria-describedby="basic-addon2">
          <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">Rechercher</button>
          </div>
        </div>
      </form>
    </div>
  </div>

<div id="icons" class="row gap-3">
  <% @icons.each do |icon| %>
    <%= render icon %>
  <% end %>
</div>

<%= link_to "Nouvelle icône", new_icon_path, class:"btn btn-secondary" %>
